<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:tk="clr-namespace:TK.CustomMap;assembly=TK.CustomMap" 
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:custommaps" x:Class="custommaps.MainPage">
   <StackLayout>
    <tk:TKCustomMap x:Name="mapView" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                        AutomationId="MapView" 
                        AutomationProperties.IsInAccessibleTree="true" 
                        AutomationProperties.Name="Map" 
                          MapType="Hybrid" 
                        WidthRequest="320" 
                        HeightRequest="200" 
                        IsShowingUser="true" 
                        IsClusteringEnabled="false" 
                        MapRegion="{Binding MapRegion}"
                        />
        </StackLayout>
</ContentPage>